#! /usr/bin/env bash

counter="${1:-1}"
numberOfFiles="$(printf "%d" "$(find . -depth 1 | wc -l)")"
numberOfDigits="${#numberOfFiles}"

# Give them temporary names to avoid collisions
for file in *
do
  mv "$file" "temp_$file"
done

echo ''

for fileTmp in *
do
  targetName="$(printf "%0${numberOfDigits}d" "$counter").${fileTmp#*.}"
  mv -v "$fileTmp" "$targetName"
  counter=$((counter + 2))
done
