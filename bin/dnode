#!/bin/dash

set -euf

# Interactive terminal:
# `dnode`

# Stdin:
# `echo 'console.log(`Hello ${1 + 2}`)' | dnode -`

# With flags:
# `dnode -c 'echo test'`

image=node:alpine

dorun () {
  docker run \
    --interactive \
    --rm \
    --entrypoint=node \
    "$@"
}

if test $# -eq 0
then
  dorun --tty "$image"
else
  dorun "$image" "$@"
fi
