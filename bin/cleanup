#!/bin/dash

set -euf

separator='âœ”\n\n'

echo '===== Clean Homebrew Cache ====='
brew cleanup
echo "$separator"

echo '===== Clean npm Cache ====='
npm cache clean --force
echo "$separator"

echo '===== Clean Yarn Cache ====='
yarn cache clean
echo "$separator"

echo '===== Clean Docker ====='
# docker-clean
docker system prune
echo "$separator"

echo '===== Clean Nix Store ====='
nix store gc
echo "$separator"

# echo '===== Clean Xcode ====='
# xcrun simctl delete unavailable
# echo "$separator"

echo '===== Empty Trash ====='
rm -rf ~/.Trash/*
echo "$separator"
