#! /usr/bin/env bash

set -euo pipefail
IFS=$'\n\t'

(command -v ex > /dev/null) || \
    (>&2 echo 'ex is not installed' && exit 1)

(command -v fd > /dev/null) || \
    (>&2 echo 'fd is not installed' && exit 1)

(command -v tab2space > /dev/null) || \
    (>&2 echo 'tab2space is not installed' && exit 1)


files=$(\
  fd \
    --hidden \
    --no-ignore \
    \
    --exclude node_modules \
    --exclude .next \
    \
    --extension babelrc \
    --extension cabal \
    --extension coffee \
    --extension css \
    --extension hs \
    --extension htm \
    --extension html \
    --extension ignore \
    --extension jade \
    --extension js \
    --extension json \
    --extension jsx \
    --extension lua \
    --extension md \
    --extension mustache \
    --extension php \
    --extension pug \
    --extension sass \
    --extension scad \
    --extension sh \
    --extension styl \
    --extension svg \
    --extension ts \
    --extension tsx \
    --extension txt \
    --extension yaml \
)

echo -e 'Replace tabs with 2 spaces and use LF for newline:\n'

if test "$files"
then
  echo "$files" | while read -r file
  do
    printf "%s" "$file"
    tab2space -unix -t2 "$file"{,}
    ex -scwq "$file"
    echo ' âœ”'
  done
else
  echo "No files with tabs were found"
fi
