#! /usr/bin/env bash

git log \
  --decorate \
  --date="short" \
  --graph \
  --color \
  --pretty="format:%C(yellow)%h%C(reset) %ad%C(red)%d%C(reset) %C(bold normal)%s%C(reset) %G? %C(cyan)[%an]%C(reset)" \
  "$@" \
| sed 's/ N / /g' \
| sed 's/ G / ğŸ”‘  /g'

# Limit number of entries with
# --max-count 20
