#! /usr/bin/env bash

# FIXME: Only works with Terminal and not with Hyper
# id=$(osascript -e 'tell app "Hyper" to id of window 1')
# TODO: Add `-l "$id" -T 2` to capture command


# -o  No shadow
# -l  Id of window to capture
# -T  Timeout until screenshot (in seconds)

sleep 2 && screencapture \
  -o \
  -W \
  ~/Desktop/terminal-screenshot.png &
