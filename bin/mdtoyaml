#!/bin/dash

set -euf

# Convert Markdown to YAML
# by extracting the frontmatter and including the body as a field

sep=o2kuiX2ThJLbBuTx6dhVyFn4SugruP3S
no_yaml_start=$(sd --flags e -- '^---\n' '' < "$1")
metayaml=$(
    echo "$no_yaml_start" \
    | sd -- '^---' "$sep" \
    | sed "/$sep/,\$d"
  )
body=$(
    echo "$no_yaml_start" \
    | sd -- '^---' "$sep" \
    | sed -e "1,/$sep/d" -e 's/^/  /'
  )

echo "$metayaml\nbody: |\n$body"
