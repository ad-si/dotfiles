#!/bin/dash

set -euf

# Open the Server

# kubectl run adrians-ubuntu \
#   --restart=Never \
#   --rm \
#   --stdin \
#   --tty \
#   --image gcr.io/deploy-219812/adrians-ubuntu \
#   -- fish

kubectl create -f ~/Projects/deploy/base/job.yaml

sleep 80

podName="$(kubectl get pods | grep adrians-ubuntu-job | cut -c 1-24)"

kubectl exec \
  -it \
  "$podName" \
  -- \
  fish --login
