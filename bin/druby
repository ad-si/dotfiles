#!/bin/dash

set -euf

# Interactive terminal:
# `druby`

# Stdin:
# `echo 'puts "Hello #{1 + 2}"' | druby -`

# With flags:
# `druby -e '1 + 2'`

image=ruby:alpine

if test $# -eq 0
then
  docker run \
    --interactive \
    --rm \
    --entrypoint=irb \
    --tty \
    "$image"
else
  docker run \
    --interactive \
    --rm \
    --entrypoint=ruby \
    "$image" "$@"
fi
