#!/bin/dash

# $1 => pwd
# $2 => file

check_url_prefix() {
  case "$1" in
    http://*|https://*|localhost:*) return 0 ;;
    *) return 1 ;;
  esac
}


if test -f "$1/$2"; then
  open "$1/$2"
elif test -d "$1/$2"; then
  open "$1/$2"
elif check_url_prefix "$2"; then
  open "$2"
else
  search_query=""
  shift  # Skip the first argument (pwd)

  for arg in "$@"; do
    search_query="$search_query $arg"
  done

  search_query="${search_query# }" # Remove leading space if any
  open "https://duckduckgo.com/?q=$search_query"
fi
